@model FootballMatches.ViewModels.StatisticsViewModel

<div class="statistics d-flex flex-column justify-content-around">
    <div class="d-flex flex-column">
        <h1 class="h4">Team Statistics</h1>
        <table class="table table-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Team</th>
                    <th scope="col">Host Wins</th>
                    <th scope="col">Host Draw</th>
                    <th scope="col">Host Loss</th>
                    <th scope="col">Guest Win</th>
                    <th scope="col">Guest Draw</th>
                    <th scope="col">Guest Loss</th>
                    <th scope="col">Total Win</th>
                    <th scope="col">Total Draw</th>
                    <th scope="col">Total Loss</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teamStats in Model.TeamStatistics)
                {
                    <tr>
                        <td>@teamStats.TeamName</td>
                        <td>@teamStats.Statistics[0].Win</td>
                        <td>@teamStats.Statistics[0].Draw</td>
                        <td>@teamStats.Statistics[0].Loss</td>
                        <td>@teamStats.Statistics[1].Win</td>
                        <td>@teamStats.Statistics[1].Draw</td>
                        <td>@teamStats.Statistics[1].Loss</td>
                        <td>@teamStats.Statistics[2].Win</td>
                        <td>@teamStats.Statistics[2].Draw</td>
                        <td>@teamStats.Statistics[2].Loss</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex flex-column">
        <h1 class="h4">Player Statistics</h1>
        <table class="table table-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Player</th>
                    <th>Matches</th>
                    <th>Goals</th>
                    <th>Team</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var (playerId, playerStats) in Model.PlayerStatistics)
                {
                    <tr>
                        <td>@playerStats.PlayerName</td>
                        <td>@playerStats.MatchesPlayed</td>
                        <td>@playerStats.GoalsScored</td>
                        <td>@playerStats.PlayerTeam</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>