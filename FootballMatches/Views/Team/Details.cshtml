@model Team

<div class="col-xs-12 col-md-10 d-flex flex-column">
    <div class="team-details align-content-between">
        <div class="team-details__header d-flex flex-wrap justify-content-start mb-2">
            <div class="team-logo"><img class="img-fluid" src="@Model.Logo" alt="Football team logo" /></div>
            <h1 class="team-name">@Model.Name</h1>
        </div>
        <div class="team-details__players">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Player name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in Model.Players)
                    {
                        <tr>
                            <td>@player.Name</td>
                            <td><button class="btn btn-primary" data-item-id="@player.Id" data-toggle="modal" data-target="#removePlayerModal">Remove</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="team-actions d-flex justify-content-end">
        <button type="button" class="btn btn-primary mx-4" data-toggle="modal" data-target="#addPlayerModal">Add player</button>
        <button type="button" class="btn btn-danger mx-4">Cance;</button>
    </div>
</div>
<!-- Remove player modal -->
<div class="modal" id="removePlayerModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <p class="mb-0 modal-title">Remove player?</p>
            </div>
            <div class="modal-body"><h1 class="text-center">Are you sure?</h1></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary mx-2" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-danger mx-2" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<!-- Add player modal -->
<div class="modal" id="addPlayerModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <p class="mb-0 modal-title">Add player</p>
            </div>
            <div class="modal-body"><!-- TODO: input form --></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary mx-2" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-danger mx-2" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
