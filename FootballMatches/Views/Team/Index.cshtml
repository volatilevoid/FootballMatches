@model List<Team>

    <div class="col-xs-12 col-md-10 d-flex flex-column">
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-primary my-4" data-toggle="modal" data-target="#newTeamModal">Create new team</button>
        </div>
        <div class="teams">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Number of players</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var team in Model)
                        {
                            <tr>
                                <td>@team.Name</td>
                                <td>@team.Players.Count</td>
                                <td><a class="btn btn-primary" asp-controller="Team" asp-action="Details" asp-route-id="@team.Id">Details</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create new team modal -->
    <div class="modal" id="newTeamModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <p>Create team</p>
                </div>
                <div class="modal-body">
                    <form enctype="multipart/form-data" id="add-team-form" asp-controller="Team" asp-action="Add">
                        <div class="form-group">
                            <label for="teamName">Name</label>
                            <input id="teamName" type="text" class="form-control" name="teamName">
                        </div>
                        <div class="form-group">
                            <label for="teamDescription">Description</label>
                            <textarea id="teamDescription" class="form-control" name="teamDescription" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="teamLogo">Logo</label>
                            <input type="file" class="form-control-file" id="teamLogo" name="logo">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button id="add-team-confirm" type="button" class="btn btn-primary mx-2" data-dismiss="modal">Save</button>
                    <button id="add-team-cancel" type="button" class="btn btn-danger mx-2" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
